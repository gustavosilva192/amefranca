				<div class="collapse" id="indicadores">
				  <div class="well">
						<h4>Indicadores</h4>
						<%= link_to "Manual POP Tasy", {:controller=>"pages", :action=>'pdff', :filename=>'2012-sbseg-mc2.pdf'}, :target=>'_blank'%>
