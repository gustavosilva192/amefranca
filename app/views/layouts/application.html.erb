<!DOCTYPE html>
<html>
  <head>
    <title>Amefranca</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet' type='text/css'>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <nav>
      <div class="menu-icon">
        <i class="fa fa-bars fa-2x"></i>
      </div>

      <div class="logo" >
        <a href="/about"> <img src="<%= asset_path('AME2.png') %>" height="30"></a>
      </div>

      <div class="menu">
        <ul>
          <li><%= link_to "Página inicial", "/"  %></li>
          <li><%= link_to "Notícias", "/news"  %></li>
          <li><a href="http://189.112.5.113/LaboratorioWeb/indexLaboratorio.jsp" target="new">Exames </a></li>
          <li><a href="/contacts/new">Ouvidoria</a></li>
          <li><%= link_to "Informações ao Paciente", "/infos" %></li>
          <li><%= link_to "Trabalhe conosco", "/edital" %></li>
          <li><%= link_to "Transparência", "/transparency"  %></li>
        </ul>
      </div>
    </nav>
  </head>
  <body>
    
    <div class="container" id="frame">
      <div class="row">
        <div class="col-lg-12">

          <br>
          <br>
          <br>
          <br>

          <%= yield %>
            
        </div>
      </div><!--/row-->
    </div> <!-- /container -->


  </body>
  <script type="text/javascript">$(document).ready(function(){$('body').bind('cut copy paste',function(e){e.preventDefault();});$("body").on("contextmenu",function(e){return false;});});
  </script>
  <script type="text/javascript">
    // Menu-toggle button
    $(document).ready(function() {
      $(".menu-icon").on("click", function() {
        $("nav ul").toggleClass("showing");
      });
    });

    // Scrolling Effect
    $(window).on("scroll", function() {
      if($(window).scrollTop()) {
        $('nav').addClass('black');
      }
      else {
        $('nav').removeClass('black');
      }
    })
  </script>
</html>
