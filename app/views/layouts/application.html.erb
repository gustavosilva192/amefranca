<!DOCTYPE html>
<html>
  <head>
    <title>Amefranca</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.3.1.js"></script>


    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <div class="wrapper">

        <nav>
          <div class="menu-icon">
            <i class="fa fa-bars fa-2x"></i>
          </div>

          <div class="logo" >
            <a href="/about"> <img src="<%= asset_path('AME2.png') %>" height="30"></a>
          </div>

          <div class="menu">
            <ul>
              <li><%= link_to "Página inicial", "/"  %></li>
              <li><%= link_to "Notícias", "/news"  %></li>
              <li><a href="http://189.112.5.113/LaboratorioWeb/indexLaboratorio.jsp" target="new">Exames </a></li>
              <li><a href="#">Ouvidoria</a></li>
              <li><%= link_to "Informações ao Paciente", "/infos" %></li>
              <li><%= link_to "Trabalhe conosco", "/edital" %></li>
              <li><%= link_to "Transparência", "/transparency"  %></li>
            </ul>
          </div>
        </nav>
    </div>
  </head>
  <body class="background-attachment: fixed-bg" bgcolor="#FFFFFF" ondragstart="return false" onselectstart="return false">
    
      <div id="spacing"></div>
      <div id="content">
        <%= yield %>
      </div>
  </body>
  <script type="text/javascript">

      // Menu-toggle button

      $(document).ready(function() {
            $(".menu-icon").on("click", function() {
                  $("nav ul").toggleClass("showing");
            });
      });

      // Scrolling Effect

      $(window).on("scroll", function() {
            if($(window).scrollTop()) {
                  $('nav').addClass('black');
            }

            else {
                  $('nav').removeClass('black');
            }
      })


      </script>

</html>
