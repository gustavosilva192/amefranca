<style >
  input[type=text],
  input[type=email],
  input[type=password] {
    color: #666666;
    width: 100%;
    border: 1px solid #E6E6E6;
    border-radius: 0px; 
    height: 60px;
    margin: 6px auto;
    text-indent: 10px;
  }

  .btn-submit {
    color: #FFFFFF;
    font-size: 18px;
    text-transform: uppercase;
    background: #c91717;
    padding: 10px 20px;
    border: 0;
    margin-top: 6px;
  }

  .form {
    text-align:center;
    margin: 0 auto 10px;
    padding: 20px 0 10px 0;
    font-size: 16px;
    width: 300px;
  }

</style>

<div class="login">
	<div class="container">
		<div class="form">

      		<h1>Conectar</h1>
			
			<%= form_for(:session, url: login_path) do |f| %> 
			  <%= f.email_field :email,required: true, :placeholder => "Email" %> 
			  <%= f.password_field :password, required: true, :placeholder => "Password" %> 
			  <%= f.submit "Entrar", class: "btn-submit" %>
			<% end %>
    	</div>
	</div>
	<br>
	Ainda não é cadastrado?<a href="/users/new">Clique aqui!</a>
</div>